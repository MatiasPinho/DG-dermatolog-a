---
import { ArrowRight } from "@lucide/astro";

interface Props {
  title: string;
  linkText?: string;
  icon: any; // Type for Astro component/Lucide icon
}

const { title, linkText = "Ver mas", icon: Icon } = Astro.props;
---

<div
  class="w-lg h-auto bg-white-500 transition-colors p-6 rounded-2xl flex flex-col gap-y-18 hover:bg-[#173c64] group"
>
  <div>
    <Icon size={46} class="group-hover:text-white" />
  </div>
  <h1 class="text-text-dark group-hover:text-white">{title}</h1>
  <div class="flex items-center gap-x-2 justify-end">
    <p class="text-text-dark group-hover:text-white">{linkText}</p>
    <ArrowRight class="group-hover:text-white" />
  </div>
</div>
