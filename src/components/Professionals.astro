---
import { ArrowRight } from "@lucide/astro";

const professionals = [
    {
        name: "Dra. María González",
        role: "Dermatología Clínica",
        details: [
            { label: "Especialidad", value: "Acné y Rosácea" },
            { label: "Formación", value: "UBA - Hospital de Clínicas" },
            { label: "Experiencia", value: "15 años" },
        ],
        stats: [
            { label: "Pacientes", value: "5k+" },
            { label: "Tratamientos", value: "12k+" },
            { label: "Valoración", value: "4.9/5" },
        ],
        image: "/woman-cosmetologist-having-beauty-treatment.jpg",
    },
    {
        name: "Dr. Juan Pérez",
        role: "Cirugía Dermatológica",
        details: [
            { label: "Especialidad", value: "Cirugía de Mohs" },
            { label: "Formación", value: "UNLP - Hospital Italiano" },
            { label: "Experiencia", value: "12 años" },
        ],
        stats: [
            { label: "Cirugías", value: "3k+" },
            { label: "Éxito", value: "99%" },
            { label: "Valoración", value: "5.0/5" },
        ],
        image: "/woman-checking-her-skin-mirror-after-receiving-cosmetic-treatment.jpg",
    },
    {
        name: "Dra. Laura Fernández",
        role: "Medicina Estética",
        details: [
            { label: "Especialidad", value: "Rejuvenecimiento Facial" },
            { label: "Formación", value: "UCA - Posgrado Estética" },
            { label: "Experiencia", value: "10 años" },
        ],
        stats: [
            { label: "Procedimientos", value: "8k+" },
            { label: "Retorno", value: "95%" },
            { label: "Valoración", value: "4.8/5" },
        ],
        image: "/woman-cosmetologist-having-beauty-treatment.jpg",
    },
    {
        name: "Dr. Carlos Ruiz",
        role: "Dermatoscopía Digital",
        details: [
            { label: "Especialidad", value: "Control de Lunares" },
            { label: "Formación", value: "Austral - H. Austral" },
            { label: "Experiencia", value: "18 años" },
        ],
        stats: [
            { label: "Diagnósticos", value: "20k+" },
            { label: "Precisión", value: "99.9%" },
            { label: "Valoración", value: "4.9/5" },
        ],
        image: "/woman-checking-her-skin-mirror-after-receiving-cosmetic-treatment.jpg",
    },
];
---

<section class="py-24 px-6 relative overflow-hidden">
    <!-- Decorative background elements -->

    <div class="max-w-7xl mx-auto relative z-10">
        <div class="mb-16 text-center professionals-heading">
            <h2
                class="text-5xl md:text-6xl lg:text-7xl font-semibold text-text-dark leading-[0.95] mb-5"
                style="font-family: var(--font-sans);"
            >
                Nuestro Equipo <em
                    class="not-italic font-semibold"
                    style="font-family: var(--font-serif); font-style: italic;"
                    >Profesional</em
                >
            </h2>
            <p
                class="text-lg md:text-xl text-text-muted mb-12 max-w-2xl mx-auto"
            >
                Conozca a nuestros especialistas dedicados a brindar la mejor
                atención dermatológica con tecnología de vanguardia.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {
                professionals.map((prof) => (
                    <div class="glass-card prof-card rounded-3xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 flex flex-col justify-between group bg-white/40">
                        <div class="flex flex-col-reverse sm:flex-row gap-6 mb-8">
                            <div class="flex-1 flex flex-col justify-center">
                                <h3 class="text-2xl font-bold text-gray-900 mb-1">
                                    {prof.name}
                                </h3>
                                <p class="text-primary font-medium mb-6">
                                    {prof.role}
                                </p>

                                <div class="space-y-3 mb-8">
                                    {prof.details.map((detail) => (
                                        <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-2">
                                            <span class="text-gray-900 font-semibold min-w-24">
                                                {detail.label}:
                                            </span>
                                            <span class="text-text-muted">
                                                {detail.value}
                                            </span>
                                        </div>
                                    ))}
                                </div>

                                <button class="self-start inline-flex items-center bg-primary text-white pl-5 pr-1 py-1 rounded-full text-sm font-medium hover:bg-primary-light transition-all duration-300 group">
                                    <span class="mr-2">Ver Perfil</span>
                                    <span class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center shrink-0 transition-transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5">
                                        <ArrowRight class="w-4 h-4 text-white" />
                                    </span>
                                </button>
                            </div>

                            <div class="w-full sm:w-48 aspect-square shrink-0 rounded-2xl overflow-hidden bg-gray-100 shadow-inner">
                                <img
                                    src={prof.image}
                                    alt={prof.name}
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                />
                            </div>
                        </div>

                        <div class="pt-6 grid grid-cols-3 gap-4">
                            {prof.stats.map((stat) => (
                                <div class="glass-nav rounded-2xl p-4 flex flex-col items-center justify-center text-center transition-all duration-300 hover:bg-white/60">
                                    <p class="text-xs text-text-muted uppercase tracking-wider font-medium mb-1">
                                        {stat.label}
                                    </p>
                                    <p class="text-xl font-bold text-gray-900">
                                        {stat.value}
                                    </p>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
